<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
body{
    background-color: rgb(238, 238, 238);
}

#head {
    margin-left: 25px;
}

.container {
    padding: 15px;
}

input, #batch {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    margin-bottom: 10px;
    border-radius: 4px;
    border: 2px solid #ccc;
    box-sizing: border-box;
}

input:focus {
    border: 3px solid #555;
    border-radius: 4px;
}

#address {
    width: 100%;
    height: 80px;
    padding: 12px 20px;
    border: 2px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.registerbtn {
    background-color: #3CBC8D;
    padding: 10px 15px 10px;
    border: 2px solid rgb(238, 238, 238);
    border-radius: 4px;
    color: white;
}

.cancelbtn {
    background-color: gray;
    padding: 10px 15px 10px;
    border: 2px solid rgb(238, 238, 238);
    border-radius: 4px;
    color: white;
}
    </style>
    <script>
        
    </script>
    <title>Student Entry</title>
</head>
<body>
    <h1 id="head">@ViewBag.Info</h1>
    <h2 id="head">Student Entry</h2>
    <form>
        <div class="container">
          <label for="code"><b>Code</b></label>
          <input type="text" placeholder="Student Code" name="code" id="code" required>
      
          <label for="name"><b>Name</b></label>
          <input type="text" placeholder="Student Name" name="name" id="name" required>
      
          <label for="email"><b>Email</b></label>
          <input type="email" placeholder="Email" name="email" id="email">

          <label for="dob"><b>Date Of Birth</b></label>
          <input type="date" placeholder="mm/dd/yyyy" name="dob" id="dob" required>

          <label for="phone"><b>Phone</b></label>
          <input type="number" placeholder="Student Phone" name="phone" id="phone">

          <label for="idcard"><b>National Registeration Card</b></label>
          <input type="text" placeholder="Student NRC" name="idcard" id="idcard" required>

          <label for="father"><b>Father Name</b></label>
          <input type="text" placeholder="Father Name" name="father" id="father">

          <label for="address"><b>Address</b></label>
          <input type="text" name="address" id="address">

          <label for="batch"><b>Batch Name</b></label>
          <select name="batch" id="batch">
            <option value="batch1">JWDBatch1</option>
            <option value="batch2">JWDBatch2</option>
            <option value="batch3">JWDBatch3</option>
          </select>
      
          <button type="submit" class="registerbtn" onclick="register()">Register</button>
          <button type="" class="cancelbtn">Cancel</button>
        </div>
        <h2>
            <ul>
                @foreach (string friend in @ViewBag.Friends)
                {
                    <li>@friend</li>
                }
            </ul>
        </h2>
      </form>
</body>
</html>