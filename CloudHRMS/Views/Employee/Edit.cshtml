@model EmployeeViewModel
@{
    ViewData["Title"] = "Employee";
}
<h3>Employee Edit</h3>
@{
    var info = ViewData["Info"];
}
@if (info != null)
{
    if (Convert.ToBoolean(ViewData["Status"]))
    {
        <div class="alert alert-success" role="alert">
            @info
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            @info
        </div>
    }
}
<form action="/employee/update" method="post">
    <input type="hidden" name="Id" value="@Model.Id" /> <!--for update process carrying Id-->
    <div class="mb-3">
        <label class="form-label">Code:</label>
        <input type="text" class="form-control" name="Code" required value="@Model.Code">
    </div>
    <div class="mb-3">
        <label class="form-label">Name:</label>
        <input type="text" class="form-control" name="Name" required value="@Model.Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="Email" value="@Model.Email">
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label><br>
        <label><input type="radio" name="Gender" required value="f" @(Model.Gender=="f"?"Checked":"")> Female</label>
        <label><input type="radio" name="Gender" required value="m" @(Model.Gender == "m" ? "Checked" : "")> Male</label>
    </div>
    <div class="mb-3">
        <label class="form-label">DOB</label>
        <input type="date" class="form-control" name="DOB" required value="@Model.DOB.ToString("yyy-MM-dd")">
    </div>
    <div class="mb-3">
        <label class="form-label">DOE</label>
        <input type="date" class="form-control" name="DOE" required value="@Model.DOE.ToString("yyy-MM-dd")">
    </div>
    <div class="mb-3">
        <label class="form-label">DOR</label>
        <input type="date" class="form-control" name="DOR" value="@Model.DOR?.ToString("yyy-MM-dd")">
    </div>
    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" name="Address" value="@Model.Address">
    </div>
    <div class="mb-3">
        <label class="form-label">Basic Salary</label>
        <input type="number" class="form-control" name="Basic Salary" required value="@Model.BasicSalary">
    </div>
    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" name="Phone" required value="@Model.Phone">
    </div>
    <div class="mb-3">
        <label class="form-label">Position</label>
        <select class="form-select" name="PositionId">
            <option selected>Open this selct menu</option>
            @foreach (var position in ViewBag.Positions)
            {
                if (position.Id == Model.PositionId)
                {
                    <option value="@position.Id">@position.Code</option>
                }
                else
                {
                    <option value="@position.Id">@position.Code</option>
                }
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Department</label>
        <select class="form-select" name="DepartmentId">
            <option selected>Open this selct menu</option>
            @foreach (var department in ViewBag.Departments)
            {
                if (department.Id == Model.DepartmentId)
                {
                    <option value="@department.Id">@department.Code</option>
                }
                else
                {
                    <option value="@department.Id">@department.Code</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/position/list" class="btn btn-outline-primary">List</a>
</form>